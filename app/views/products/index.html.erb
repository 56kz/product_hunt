<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <div>
        <%= link_to "Publicar Producto", new_product_path, class: "btn btn-primary" %>
      </div>
     <table class="table">
      <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>URL</th>
        <th>Descripcion</th>
        <th></th>
      </tr>
      <% @products.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= link_to p.name, p %></td>
        <td><%= p.url %></td>
        <td><%= p.description %></td>
        <td><%= link_to "Editar", edit_product_path(p) %></td>

      </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>
